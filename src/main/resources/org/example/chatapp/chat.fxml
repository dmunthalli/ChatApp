<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.app1.ChatAppController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="340.0">
            <bottom>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox prefHeight="100.0" prefWidth="285.0">
                            <children>
                                <TextArea prefRowCount="2" fx:id="textArea" wrapText="true" styleClass="chat-text-area">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </HBox.margin></TextArea>
                            </children>
                        </HBox>
                        <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Button mnemonicParsing="false" text="Check" onAction="#checkMessageButtonClick">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" text="Send" onAction="#sendButtonClick">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children></HBox>
            </bottom>
            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER" hbarPolicy="NEVER" vbarPolicy="NEVER">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" fx:id="chatPane" styleClass="root">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <children>
                            </children>
                        </VBox>
                    </content></ScrollPane>
            </center></BorderPane>
    </children>
</AnchorPane>